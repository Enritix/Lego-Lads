<%- include('components/header') %>
  <%- include('components/nav') %>


  <main>
  
    <div class="container">
      <a  class="close" href="/">‚ùå</a>
      <section class="status">
        <article class="status-item">
          <header>
            <h2>Verdiend</h2>
          </header>
          <div class="status-info">
            <figure>
              <img src="../assets/images/coin.png" alt="Coin">
            </figure>
            <span class="verdiend">5.6K</span>
          </div>
        </article>

        <article class="status-item">
          <header>
            <h2>Uitgegeven</h2>
          </header>
          <div class="status-info">
            <figure>
              <img src="../assets/images/coin.png" alt="Coin">
            </figure>
            <span class="uitgegeven">2.4K</span>
          </div>
        </article>

        <div class="status-divider"></div>

        <article class="status-item">
          <header>
            <h2>Huidig bedrag</h2>
          </header>
          <div class="status-info">
            <figure>
              <img src="../assets/images/coin.png" alt="Coin">
            </figure>
            <span class="huidig-bedrag">3.2K</span>
          </div>
        </article>
      </section>


      <div class="name">
        <h2>Welkom, Jean-Claude </h2>
        <button class="open-popup" onclick="openPopup()"><img src="../assets/images/achief-icon.png" alt=""></button>
      </div>

      <section class="carousel">
        <button class="arrow" class="arrow left" aria-label="Vorige figuur" onclick="prevFigure()">‚óÄ</button>

        <figure class="figure-container">

          <img id="lego-figure" src="../assets/images/batman.png" alt="Lego minifiguur">


        </figure>
        <p id="amount-figs">1/3 <span id="inventory"><a href="inventory">üéí</a></span></p>
        <figcaption class="info-container">
          <h2 id="name">BATMAN</h2>
          <p id="rarity" class="rarity episch">EPISCH</p>
        </figcaption>
        <button class="arrow" class="arrow right" aria-label="Volgende figuur" onclick="nextFigure()">‚ñ∂</button>
      </section>
      <section id="prestaties-container" class="prestaties-container">
        <span id="prestatie-titel">
          <h1 class="titel">PRESTATIES</h1>
        </span>

        <article class="prestatie">
          <figure>
            <img src="../assets/images/memory.png" alt="Memory game">
          </figure>
          <section class="info">
            <h2>Geheugenspel</h2>
            <p>Speel 25 LEGO Memory spelletjes</p>
            <div class="progress-bar">
              <div class="progress" style="width: 100%;"></div>
            </div>
            <span>25/25</span>
          </section>
          <aside class="reward">
            <img src="../assets/images/coin.png" alt="Coins">
            <p>2000</p>
          </aside>
        </article>

        <article class="prestatie">
          <figure>
            <img src="../assets/images/coin.png" alt="Munten">
          </figure>
          <section class="info">
            <h2>Munten</h2>
            <p>Verdien 10.000 LEGO munten</p>
            <div class="progress-bar">
              <div class="progress" style="width: 56%;"></div>
            </div>
            <span>5600/10.000</span>
          </section>
          <aside class="reward  not">
            <img src="../assets/images/coin.png" alt="Coins">
            <p>1000</p>
          </aside>
        </article>

        <article class="prestatie">
          <figure>
            <img src="../assets/images/greenblock.png" alt="Klikspelletje">
          </figure>
          <section class="info">
            <h2>Klik spelletje</h2>
            <p>Verkrijg 5.000 blokjes</p>
            <div class="progress-bar">
              <div class="progress" style="width: 40%;"></div>
            </div>
            <span>2000/5000</span>
          </section>
          <aside class="reward  not">
            <p><img src="../assets/images/coin.png" alt="Coins">5000</p>
          </aside>
        </article>
      </section>

      <div id="prestaties-popup" class="popup">
        <div class="popup-content">
          <span class="close-popup" onclick="closePopup()">&times;</span>
          <h2 class="popup-title"> <img src="../assets/images/achief-icon.png" alt="">Prestaties</h2>
          <div class="prestaties-container">
          </div>
        </div>
      </div>

    </div>
  </main>


  <%- include('components/settings') %>
</body>

</html>