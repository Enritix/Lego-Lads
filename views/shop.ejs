<%- include('components/header') %>
  <%- include('components/nav') %>
  <main>
    <section id="info-popup" class="popup-shop">
      <div class="popup-content">
          <span class="close-popup" onclick="closePopup()">❌</span>
          <p>Hier kan je figs en kisten/keys kopen </p>
          <p>elke 12u veranderd de shop(alleende figs)</p>
      </div>
    </section>
    <p id="timer-shop">
      <span id="countdown">11:59:59</span>
      <img src="../assets/images/timer-reverse.png" alt="">
  </p>
    <header class="header-container">
      <h1>winkel
        <button class="tooltip-button" aria-label="Meer informatie" onclick="openInfoPopup()">
          <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-info-circle"
            viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
            <path
              d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 0 0 1 2 0" />
          </svg>
        </button>
      </h1>
    </header>
    </header>

    <section class="carousel-container">
      <div class="carousel">
        <% minifigs.forEach(fig => { %>
          <img 
            src="<%= fig.img %>" 
            alt="<%= fig.name %>" 
            class="carousel-img" 
            data-name="<%= fig.name %>" 
            data-rarity="<%= fig.rarity %>" 
            data-price="1000">
        <% }) %>        
      </div>

    </section>

    <article class="details">
      <p class="coins"> <img id="coin-price" src="../assets/images/coin.png" alt=""><strong
          id="char-price">1000</strong></p>
      <button class="arrow" onclick="prevSlide()"><span class="triangle">◀</span></button><button
        class="buy-btn  text-lego-stroke" data-text="koop">koop</button><button id="arrow-right" class="arrow"
        onclick="nextSlide()"><span class="triangle">▶</span></button>
    </article>
    <section id="char-info">
      <h4 id="char-name">Chen</h4>
      <p id="char-rarity" class="rarity legendary">Legendary</p>
    </section>
    <div class="divider"></div>
    <section class="chest-shop">
      <h1>Chest Shop</h1>
      <ul id="chest-products">
        <li><img src="../assets/images/common-chest.png" alt="chest">
          <p class="gewoon rarity">Gewoon</p><button class="  text-lego-stroke" data-text="koop">koop</button>
        </li>
        <li><img src="../assets/images/epic-chest.png" alt="chest">
          <p class="episch rarity">episch</p><button class="  text-lego-stroke" data-text="koop">koop</button>
        </li>
        <li><img src="../assets/images/legnd-chest.png" alt="chest">
          <p class="legendarisch rarity">legendarisch</p> <button class="buy-btn  text-lego-stroke"
            data-text="koop">koop</button>
        </li>
        <li><img src="../assets/images/chest-key.png" alt="chest">
          <p class="key rarity">key</p><button class=" text-lego-stroke" data-text="koop">koop</button>
        </li>
      </ul>

    </section>
  </main>


  <div id="popup" class="popup">
    <div class="popup-content">
        <span class="close" onclick="closePopup()">❌</span>
        <img id="popup-img" class="popup-animation" src="" alt="Popup Image">

        <p>Prijs: <img class="coin-popup" src="../assets/images/coin.png" alt="Coin"> <span id="popup-price"></span></p>
        <button class="buy-confirm  text-lego-stroke  "  data-text="koop">KOOP</button>
    </div>
</div>

<%- include('components/settings') %>
</body>

</html>