<%- include('components/header') %>
    <%- include('components/nav') %>
    <main>
      <section class="genre-container">
        <a class="close" href="genre">❌</a>
        <section class="genre-header">
          <h1>
            Geordende Minifigs Bekijken <span class="info-icon">&#x24D8;</span>
          </h1>
          <article class="header-2">
            <h2><%= theme.name %></h2>
            <img src="<%= theme.img %>" alt="<%= theme.name %>" />
          </article>
        </section>

        <section id="info-popup" class="popup">
          <article class="popup-content">
            <span class="close-button">❌</span>
            <h1 id="popup-title">Info:</h1>
            <p>
              Hier kan je zien welke minifigs je geordend hebt en tot welke sets
              ze behoren.
            </p>
          </article>
        </section>

        <section class="items">
          <section id="content">
            <section class="superheroes-section">
              <span class="remove-btn">❌</span>
              <article class="figure-container">
                <figure>
                  
                  <img src="../assets/images/Superman.png" alt="Superman" />
                  <figcaption>
                    Super Man<br /><span id="code">Code: CK7AWTR</span>
                  </figcaption>
                </figure>
              </article>

              <article class="figure-pieces">
                <img
                  src="../assets/images/Superman-in-stukjes.png"
                  alt="Superman-in-stukjes"
                />
              </article>

              <section class="legoset-container">
                <article class="legoset-item">
                  <a href="./figset"
                    ><img src="../assets/images/legoset_1.png" alt="Legoset 1"
                  /></a>
                  <h3>Set: 76048</h3>
                </article>

                <article class="legoset-item">

                  <a href="./figset"
                    ><img src="../assets/images/legoset_2.png" alt="Legoset 2"
                  /></a>
                  <h3>Set: 76048</h3>
                </article>
              </section>
            </section>
          </section>

          <section id="content">
            <section class="superheroes-section">
              <span class="remove-btn">❌</span>
              <article class="figure-container">
                <figure>
                 
                  <img src="../assets/images/Superman.png" alt="Superman" />
                  <figcaption>
                    Super Man<br /><span id="code">Code: CK7AWTR</span>
                  </figcaption>
                </figure>
              </article>

              <article class="figure-pieces">
                <img
                  src="../assets/images/Superman-in-stukjes.png"
                  alt="Superman-in-stukjes"
                />
              </article>

              <section class="legoset-container">
                <article class="legoset-item">
                  <a href="./figset"
                    ><img src="../assets/images/legoset_1.png" alt="Legoset 1"
                  /></a>
                  <h3>Set: 76048</h3>
                </article>

                <article class="legoset-item">
                  <a href="./figset"
                    ><img src="../assets/images/legoset_2.png" alt="Legoset 2"
                  /></a>
                  <h3>Set: 76048</h3>
                </article>
              </section>
            </section>
          </section>
          <img
            id="swinging-spiderman"
            src="../assets/images/spiderman.png"
            alt="Swingende Spiderman"
          />
        </section>
      </section>
    </main>

    <%- include('components/settings') %>
  </body>
