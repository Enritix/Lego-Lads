      <article class="brick-counter">
          <h2>
          <% if (lang === 'nl') { %>
            stenen <span class="brick-cost"><%= blocks %></span>
          <% } else if (lang === 'en') { %>
            stones <span class="brick-cost"><%= blocks %></span>
          <% } %>
        </h2>

        <img src="../assets/images/greenblock.png" alt="Green Brick" class="brick-img" onclick="incrementBrick()"
